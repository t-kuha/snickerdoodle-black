/include/ "system-conf.dtsi"
/ {
    model = "snickerdoodle Black";
    compatible = "krtkl,snickerdoodle-black", "krtkl,snickerdoodle", "xlnx,zynq-7000";
	
    aliases {
		serial0 = &uart0;
		spi0 = &qspi;
		spi1 = &spi1;
		mmc0 = &sdhci0;
		mmc1 = &sdhci1;
	};

    xlnk {
        compatible = "xlnx,xlnk-1.0";
    };

	wlan_en_reg: fixed-regulator-wlen {
		compatible = "regulator-fixed";
		regulator-name = "wlan-en-regulator";
		regulator-min-microvolt = <1800000>;
		regulator-max-microvolt = <1800000>;
		gpio = <&gpio0 9 4>;
		startup-delay-us = <70000>;
		enable-active-high;
	}; 

    power_en_reg: fixed-regulator-powen {
        compatible = "regulator-fixed";
        regulator-name = "power-en-regulator";
        gpio = <&gpio0 20 0>;
        regulator-min-microvolt = <1800000>;
        regulator-max-microvolt = <1800000>;
        regulator-always-on;
        enable-active-high;
    };
};

&uart0 {
	status = "okay";
};

&sdhci0 {
	status = "okay";
};

&sdhci1 {
	status = "okay";
	vmmc-supply = <&wlan_en_reg>;
	bus-width = <4>;
	cap-power-off-card;
	keep-power-in-suspend;
	#address-cells = <1>;
	#size-cells = <0>;	

	wlcore: wlcore@0 {
		reg = <2>;
		interrupt-parent = <&gpio0>;
		interrupts = <0 4>;
	};
};

&wlcore {
	compatible = "wlcore", "ti,wl1837";
};

&spi1 {
	status = "okay";
	num-cs = <1>;
};

&qspi {
	status = "okay";
	is-dual = <0>;
	num-cs = <1>;
	xlnx,qspi-mode = <1>;

	flash@0 {
		#address-cells = <1>;
		#size-cells =<1>;
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <50000000>;
		m25p,fast-read;
		
		partition@bootloader {
			label = "bootloader";
			reg = <0x0 0xe0000>;
		};
		partition@env {
			label = "env";
			reg = <0xe0000 0x20000>;
		};
		partition@linux {
			label = "linux";
			reg = <0x100000 0x500000>;
		};
		partition@devicetree {
			label = "devicetree";
			reg = <0x600000 0x620000>;
		};
		partition@rootfs {
			label = "rootfs";
			reg = <0x620000 0x9e0000>;
		};
	};
};

&i2c1 {
    status = "okay";
    clock-frequency = <100000>;
    #address-cells = <1>;
    #size-cells = <0>;

    usb2514b@2c {
        compatible = "microchip,usb2514b";
        reg = <0x2c>;
        reset-gpios = <&gpio0 16 1>;
    };
};

&usb0 {
    status = "okay";
    dr_mode = "host";
    usb-phy = <&usb_phy0>;

    usb_phy0: usb-phy0 {
        compatible = "usb-nop-xceiv";
        #phy-cells = <0>;
        view-port = <0x170>;
        drv-vbus;
    };
};

&gem0 {
    status = "okay";
    phy-mode = "rgmii-id";
    #address-cells = <1>;
    #size-cells = <0>;
    phy-reset-gpio = <&gpio0 19 1>;

    eth_phy0: ethernet-phy@0 {
        reg = <0>;
        device_type = "ethernet-phy";
    };

    gmii2rgmii0: gmiitorgmii@8 {
        compatible = "xlnx,gmii-to-rgmii-1.0";
        reg = <8>;
        phy-handle = <&eth_phy0>;
    };
};
